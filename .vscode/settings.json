{
  // Editor Settings
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.linkedEditing": true,
  "editor.quickSuggestions": {
    "strings": true
  },

  // Prettier - Formatting only
  "prettier.configPath": ".prettierrc",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ESLint - Linting & Autofix only (no formatting)
  "eslint.format.enable": false,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "eslint.run": "onType",

  // TypeScript
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  // Tailwind CSS (for NativeWind)
  "tailwindCSS.experimental.classRegex": [
    "className\\s*=\\s*[\"'`]([^\"'`]*)[\"'`]",
    "tw`([^`]*)`",
    "tw\\(\"([^\"]*)\"\\)"
  ],
  "tailwindCSS.includeLanguages": {
    "typescriptreact": "html"
  },

  // File Associations
  "files.associations": {
    "*.tsx": "typescriptreact",
    "*.ts": "typescript",
    "*.json": "jsonc"
  },

  // Search Exclusions
  "search.exclude": {
    "**/node_modules": true,
    "**/ios/Pods": true,
    "**/android/build": true,
    "**/android/.gradle": true,
    "**/.git": true,
    "**/ios/build": true,
    "**/coverage": true
  },

  // File Exclusions
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": false
  },

  // Files Watcher Exclusions (performance)
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/ios/Pods/**": true,
    "**/android/build/**": true,
    "**/android/.gradle/**": true,
    "**/ios/build/**": true
  },

  // React Native Tools
  "react-native-tools.showUserNotifications": true,

  // Error Lens
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "errorLens.excludeBySource": ["ts(80001)"],

  // Todo Tree
  "todo-tree.general.tags": ["TODO", "FIXME", "HACK", "XXX", "BUG"],
  "todo-tree.highlights.defaultHighlight": {
    "gutterIcon": true
  },

  // Git
  "git.autofetch": true,
  "git.enableSmartCommit": true,

  // Terminal
  "terminal.integrated.defaultProfile.osx": "zsh",

  // Emmet for JSX
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },

  "workbench.iconTheme": "catppuccin-mocha",

  // Indent Rainbow
  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.lightIndicatorStyleLineWidth": 1,
  "indentRainbow.colors": [
    "rgba(255,255,64,0.07)",
    "rgba(127,255,127,0.07)",
    "rgba(255,127,255,0.07)",
    "rgba(79,236,236,0.07)"
  ],

  // Pretty TypeScript Errors
  "prettyTypeScriptErrors.enable": true,

  // Gutter Preview (Image preview in gutter)
  "gutterpreview.showImagePreviewOnGutter": true,

  // SVG Preview
  "svg.preview.mode": "svg",

  // Workbench UI
  "workbench.editor.labelFormat": "short",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.tree.indent": 16,
  "workbench.tree.renderIndentGuides": "always",

  // Minimap
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 80,
  "editor.minimap.renderCharacters": false,

  // Smooth Scrolling & Cursor
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "workbench.list.smoothScrolling": true
}
