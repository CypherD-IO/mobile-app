require_relative '../node_modules/react-native/scripts/react_native_pods'

platform :ios, min_ios_version_supported
prepare_react_native_project!

target 'Cypherd' do
  config = use_native_modules!
  $RNFirebaseAnalyticsWithoutAdIdSupport = true
  $RNFirebaseAsStaticFramework = true
  # We prefer performance; keep Hermes + Fabric (New Architecture) explicitly enabled.
  hermes_enabled = true
  fabric_enabled = true

  # CocoaPods + Swift + static libraries:
  # Firebase includes Swift pods which depend on several Obj-C pods that do not define modules.
  # If we don't enable modular headers for those dependencies, CocoaPods fails with:
  # "The following Swift pods cannot yet be integrated as static libraries ..."
  #
  # We intentionally DO NOT enable `use_modular_headers!` globally because that can cause modulemap
  # collisions in React Native pods (we already hit a `react_runtime` module redefinition).
  #
  # Instead, we opt-in modular headers only for the specific Firebase/Google pods that need it.
  pod 'GoogleUtilities', :modular_headers => true
  pod 'GoogleDataTransport', :modular_headers => true
  pod 'nanopb', :modular_headers => true
  pod 'FirebaseCore', :modular_headers => true
  pod 'FirebaseCoreInternal', :modular_headers => true
  pod 'FirebaseCoreExtension', :modular_headers => true
  pod 'FirebaseInstallations', :modular_headers => true
  pod 'FirebaseABTesting', :modular_headers => true
  pod 'FirebaseSessions', :modular_headers => true
  pod 'FirebaseRemoteConfig', :modular_headers => true

  permissions_path = '../node_modules/react-native-permissions/ios'
  pod 'Permission-Camera', :path => "#{permissions_path}/Camera"

  pod 'RNPermissions', :path => '../node_modules/react-native-permissions'
  
  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => hermes_enabled,
    :fabric_enabled => fabric_enabled,
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # REMOVED DUPLICATE PODS - These are already auto-linked by React Native:
  # - react-native-webview (auto-linked)
  # - react-native-randombytes (auto-linked)  
  # - RNSentry (auto-linked)
  # - react-native-camera (auto-linked)
  # - react-native-view-shot (auto-linked)
  # - RNLocalize (auto-linked)
  # - react-native-compat (auto-linked)

  # pod 'Firebase/Crashlytics'

  target 'CypherdTests' do
    inherit! :complete
    # Pods for testing
  end

  # Enables Flipper.
  #
  # Note that if you have use_frameworks! enabled, Flipper will not work and
  # you should disable the next line.
  # use_flipper!()

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )
    if defined?(__apply_Xcode_12_5_M1_post_install_workaround)
      __apply_Xcode_12_5_M1_post_install_workaround(installer)
    end

    # Comprehensive deployment target fix for all pod targets
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        # Some pod script phases (e.g. hermes-engine "[Hermes] Replace Hermes..." and
        # react-native-vector-icons "Copy Fonts") expect REACT_NATIVE_PATH to be available.
        #
        # IMPORTANT: PODS_ROOT is `<repo>/ios/Pods`, so repo root is `$(PODS_ROOT)/../..`.
        config.build_settings['REACT_NATIVE_PATH'] = '$(PODS_ROOT)/../../node_modules/react-native'

        # Xcode's "explicit modules" / dependency scanner can break on some RN pods that transitively
        # pull in C++ headers through module umbrella headers (e.g. React-jsi -> <cassert>).
        # Disabling explicit modules for Pods avoids "Clang dependency scanner failure" cascades.
        config.build_settings['CLANG_ENABLE_EXPLICIT_MODULES'] = 'NO'

        # Don't disable clang modules globally â€” Swift pods (e.g. Sentry, Lottie) rely on modules.
        # Historically we disabled modules for some Lottie pods to avoid dependency scanner issues,
        # but that breaks `import Lottie` (used by the native splash integration).
        # Keep modules enabled; our modulemap-flag rewrite below handles the scanner issues.
        if target.name.include?('lottie')
          config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
        end

        # NOTE:
        # Do NOT set `MODULEMAP_FILE` to an absolute `$(PODS_ROOT)/...` path for Firebase pods.
        # Xcode/SwiftDriver will sometimes prefix `$(PODS_ROOT)` again when generating the
        # `-fmodule-map-file` flags, producing a broken doubled path like:
        #   .../ios/Pods//Users/.../ios/Pods/Headers/Public/...
        #
        # Keep the CocoaPods-generated (relative) modulemap paths, and rely on the xcconfig
        # modulemap-flag rewrite below to make Archive deterministic.

        # Some CocoaPods dependencies (notably Firebase transitive deps like nanopb) can trigger
        # `-Werror=non-modular-include-in-framework-module` when building as modules.
        # Treat these as warnings (or allow) to avoid build breaks.
        config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
        existing_other_cflags = config.build_settings['OTHER_CFLAGS'] || '$(inherited)'
        unless existing_other_cflags.include?('non-modular-include-in-framework-module')
          config.build_settings['OTHER_CFLAGS'] = "#{existing_other_cflags} -Wno-non-modular-include-in-framework-module -Wno-error=non-modular-include-in-framework-module"
        end

        # RN ships a slimmed-down Folly (RCT-Folly) which does not include folly::coro headers.
        # Newer Folly headers enable coroutine integration by default when the compiler supports it,
        # which leads to missing includes like <folly/coro/Coroutine.h>.
        # Force coroutines off for this vendored Folly.
        existing_cppflags = config.build_settings['OTHER_CPLUSPLUSFLAGS'] || '$(inherited)'
        unless existing_cppflags.include?('FOLLY_CFG_NO_COROUTINES')
          config.build_settings['OTHER_CPLUSPLUSFLAGS'] = "#{existing_cppflags} -DFOLLY_CFG_NO_COROUTINES=1"
        end

        # React-Fabric (New Architecture) includes some Yoga headers that are classified as "private"
        # by the Yoga pod (e.g. <yoga/style/Style.h>). Those headers live under:
        #   Pods/Headers/Private/Yoga/yoga/...
        # Ensure the private Yoga headers are visible to compilation units that include them.
        existing_hsp = config.build_settings['HEADER_SEARCH_PATHS'] || '$(inherited)'
        unless existing_hsp.include?('Headers/Private/Yoga')
          config.build_settings['HEADER_SEARCH_PATHS'] = "#{existing_hsp} \"$(PODS_ROOT)/Headers/Private/Yoga\""
        end

        # Some New-Architecture libraries include codegen headers like:
        #   <react/renderer/components/<library>_codegen/ComponentDescriptors.h>
        # Those headers are installed by CocoaPods under:
        #   Pods/Headers/Public/ReactCodegen/react/renderer/...
        # but not every pod target gets that search path by default.
        # Add it globally to prevent "ComponentDescriptors.h file not found" errors.
        existing_hsp = config.build_settings['HEADER_SEARCH_PATHS'] || '$(inherited)'
        unless existing_hsp.include?('Headers/Public/ReactCodegen')
          config.build_settings['HEADER_SEARCH_PATHS'] = "#{existing_hsp} \"$(PODS_ROOT)/Headers/Public/ReactCodegen\""
        end
        
        # Fix for bundle targets (code signing issues)
        if target.respond_to?(:product_type) and target.product_type == "com.apple.product-type.bundle"
          config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
        end
        
        # Set deployment target for ALL targets (including resource bundles)
        # This ensures compatibility with GitHub Actions CI environment
        current_target = config.build_settings['IPHONEOS_DEPLOYMENT_TARGET']
        # Ensure we never set a deployment target lower than React Native's minimum supported iOS.
        minimum_target = min_ios_version_supported
        
        if current_target.nil? || Gem::Version.new(current_target) < Gem::Version.new(minimum_target)
          config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = minimum_target
        end
        
        # Additional compatibility settings for newer Xcode versions
        config.build_settings['ONLY_ACTIVE_ARCH'] = 'NO' if config.name == 'Debug'
      end
    end
    
    # Fix for specific problematic pods that might need special handling
    installer.pods_project.targets.each do |target|
      if ['Sentry', 'Sentry-Sentry', 'RNCAsyncStorage-RNCAsyncStorage_resources'].include?(target.name)
        target.build_configurations.each do |config|
          config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = min_ios_version_supported
        end
      end
    end

    # Xcode Archive can invoke `swiftc` with `-fmodule-map-file` flags that point at
    # `${PODS_CONFIGURATION_BUILD_DIR}/<Pod>/<Something>.modulemap`.
    # Those files are created in the build products directory *during* the Pods build, but the
    # dependency scanner may try to load them earlier, causing Archive-only failures.
    #
    # Workaround: rewrite ONLY the modulemap flags to point at CocoaPods' stable modulemaps under
    # `Pods/Target Support Files`, which exist immediately after `pod install`.
    begin
      pods_root = installer.sandbox.root.to_s
      xcconfigs = [
        File.join(pods_root, 'Target Support Files', 'Pods-Cypherd', 'Pods-Cypherd.debug.xcconfig'),
        File.join(pods_root, 'Target Support Files', 'Pods-Cypherd', 'Pods-Cypherd.release.xcconfig'),
      ]

      modulemap_overrides = {
        'FirebaseCoreInternal' => 'FirebaseCoreInternal.modulemap',
        'FirebaseRemoteConfig' => 'FirebaseRemoteConfig.modulemap',
        'FirebaseRemoteConfigInterop' => 'FirebaseRemoteConfigInterop.modulemap',
        'FirebaseSessions' => 'FirebaseSessions.modulemap',
        'FirebaseSharedSwift' => 'FirebaseSharedSwift.modulemap',
        # Module name is `Promises`, but CocoaPods file is `PromisesSwift.modulemap`.
        'PromisesSwift' => 'PromisesSwift.modulemap',
        'RCTSwiftUI' => 'RCTSwiftUI.modulemap',
        # Module name is `React_Codegen`, but CocoaPods file is `React-Codegen.modulemap`.
        'React-Codegen' => 'React-Codegen.modulemap',
        # Needed by RN headers in some Xcode/Archive flows (bridging header PCH can reference it).
        'RCTDeprecation' => 'RCTDeprecation.modulemap',
        'Sentry' => 'Sentry.modulemap',
        'VisionCamera' => 'VisionCamera.modulemap',
        'react-native-document-picker' => 'react-native-document-picker.modulemap',
        'react-native-rsa-native' => 'react-native-rsa-native.modulemap',
        'react-native-video' => 'react-native-video.modulemap',
        'react-native-web-browser' => 'react-native-web-browser.modulemap',
      }

      xcconfigs.each do |xcconfig_path|
        # Fail loudly: if this file isn't present, our Archive fix can't run and Archive may fail again.
        unless File.exist?(xcconfig_path)
          raise "[Podfile][ArchiveFix] Expected xcconfig not found: #{xcconfig_path}. " \
                "Run `cd ios && pod install` and ensure CocoaPods generated Pods-Cypherd xcconfigs."
        end

        contents = File.read(xcconfig_path)
        patched = contents.dup
        total_replacements = 0

        modulemap_overrides.each do |pod_dir, modulemap_file|
          stable_path = "${PODS_ROOT}/Target Support Files/#{pod_dir}/#{modulemap_file}"

          # Replace both of these forms if present:
          # - ${PODS_CONFIGURATION_BUILD_DIR}/<Pod>/<file>.modulemap  (original CocoaPods output)
          # - ${PODS_ROOT}/Headers/Public/<Pod>/<file>.modulemap      (older workaround attempt)
          bad_build_dir_regex = %r{\$\{PODS_CONFIGURATION_BUILD_DIR\}/#{Regexp.escape(pod_dir)}/[^\"\s]+\.modulemap}
          bad_headers_public_regex = %r{\$\{PODS_ROOT\}/Headers/Public/#{Regexp.escape(pod_dir)}/[^\"\s]+\.modulemap}

          # Count replacements so we can log meaningful output (but do not fail solely on zero).
          before_count = patched.scan(bad_build_dir_regex).length
          patched.gsub!(bad_build_dir_regex, stable_path)
          after_count = patched.scan(bad_build_dir_regex).length
          total_replacements += (before_count - after_count)

          before_count = patched.scan(bad_headers_public_regex).length
          patched.gsub!(bad_headers_public_regex, stable_path)
          after_count = patched.scan(bad_headers_public_regex).length
          total_replacements += (before_count - after_count)
        end

        # IMPORTANT:
        # Do NOT inject `-fmodule-map-file` flags for `lottie-ios` / `lottie-react-native` into the
        # app target.
        #
        # Lottie is a Swift-only pod (the umbrella header is essentially empty). If Swift resolves
        # the module via the clang modulemap, it won't see Swift types like `LottieAnimationView`,
        # resulting in:
        #   error: cannot find 'LottieAnimationView' in scope
        #
        # Removing these flags forces Swift to resolve the real Swift module from
        # `${PODS_CONFIGURATION_BUILD_DIR}/lottie-ios` via `SWIFT_INCLUDE_PATHS`.
        patched.gsub!(%r{\s+-Xcc\s+-fmodule-map-file=\"\$\{PODS_ROOT\}/Target Support Files/lottie-ios/lottie-ios\.modulemap\"}, '')
        patched.gsub!(%r{\s+-Xcc\s+-fmodule-map-file=\"\$\{PODS_ROOT\}/Target Support Files/lottie-react-native/lottie-react-native\.modulemap\"}, '')
        patched.gsub!(%r{\s+-fmodule-map-file=\"\$\{PODS_ROOT\}/Target Support Files/lottie-ios/lottie-ios\.modulemap\"}, '')
        patched.gsub!(%r{\s+-fmodule-map-file=\"\$\{PODS_ROOT\}/Target Support Files/lottie-react-native/lottie-react-native\.modulemap\"}, '')

        if patched != contents
          File.write(xcconfig_path, patched)
          puts "Patched modulemap flags in: #{xcconfig_path} (replacements: #{total_replacements})"
        end

        # Fail loudly if any known-bad modulemap flag patterns remain after patching.
        remaining_bad = []
        modulemap_overrides.each_key do |pod_dir|
          bad_build_dir_regex = %r{\$\{PODS_CONFIGURATION_BUILD_DIR\}/#{Regexp.escape(pod_dir)}/[^\"\s]+\.modulemap}
          bad_headers_public_regex = %r{\$\{PODS_ROOT\}/Headers/Public/#{Regexp.escape(pod_dir)}/[^\"\s]+\.modulemap}
          if patched.match?(bad_build_dir_regex) || patched.match?(bad_headers_public_regex)
            remaining_bad << pod_dir
          end
        end

        # Also ensure Lottie modulemap flags were removed (they break Swift `import Lottie` in Archive flows).
        lottie_bad = [
          %r{\$\{PODS_ROOT\}/Target Support Files/lottie-ios/lottie-ios\.modulemap},
          %r{\$\{PODS_ROOT\}/Target Support Files/lottie-react-native/lottie-react-native\.modulemap},
        ].any? { |rx| patched.match?(rx) }

        if remaining_bad.any? || lottie_bad
          raise "[Podfile][ArchiveFix] Modulemap patch verification failed for: #{xcconfig_path}\n" \
                "- Remaining pods with bad modulemap references: #{remaining_bad.uniq.join(', ')}\n" \
                "- Lottie modulemap flags still present: #{lottie_bad}\n" \
                "This usually means CocoaPods/Xcode changed the generated flag format. " \
                "Update the regexes in ios/Podfile or the modulemap override list before archiving."
        end
      end
    rescue => e
      # Fail loudly to prevent shipping a build that will likely fail to Archive in CI/Xcode.
      raise "[Podfile][ArchiveFix] Failed while patching modulemap flags for Archive stability: #{e}"
    end
  end
end

