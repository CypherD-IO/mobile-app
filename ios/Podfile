# React Native 0.83.0 Podfile

# The react_native_pods script provides all necessary helpers including use_native_modules!
require_relative '../node_modules/react-native/scripts/react_native_pods'

platform :ios, '15.1'

# Prepare React Native project (required for RN 0.83)
prepare_react_native_project!

target 'Cypherd' do
  # Firebase configuration (must be set before use_react_native!)
  $RNFirebaseAnalyticsWithoutAdIdSupport = true
  $RNFirebaseAsStaticFramework = true

  # Enable modular headers for Firebase dependencies (required for Swift pods)
  pod 'GoogleUtilities', :modular_headers => true
  pod 'FirebaseCore', :modular_headers => true
  pod 'FirebaseCoreExtension', :modular_headers => true
  pod 'FirebaseInstallations', :modular_headers => true
  pod 'FirebaseABTesting', :modular_headers => true
  pod 'GoogleDataTransport', :modular_headers => true
  pod 'nanopb', :modular_headers => true

  # Permissions
  permissions_path = '../node_modules/react-native-permissions/ios'
  pod 'Permission-Camera', :path => "#{permissions_path}/Camera"
  pod 'RNPermissions', :path => '../node_modules/react-native-permissions'
  
  # React Native core with Hermes enabled
  # New Architecture (Fabric + TurboModules) enabled for RN 0.83
  use_react_native!(
    :path => "../node_modules/react-native",
    :hermes_enabled => true,
    :new_arch_enabled => true,
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )
  
  # Autolink all native modules from package.json (Firebase, Intercom, etc.)
  use_native_modules!

  target 'CypherdTests' do
    inherit! :complete
  end

  post_install do |installer|
    # React Native post install hook (RN 0.83 format)
    react_native_post_install(
      installer,
      "../node_modules/react-native",
      :mac_catalyst_enabled => false
    )

    # Deployment target fixes for all pod targets
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |build_config|
        # RN 0.83 + some CocoaPods/Firebase combinations can trigger:
        # "non-modular-include-in-framework-module" when compiling pods as frameworks.
        # Allow non-modular includes to keep builds unblocked.
        build_config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'

        # Fix for bundle targets (code signing issues)
        if target.respond_to?(:product_type) and target.product_type == "com.apple.product-type.bundle"
          build_config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
        end
        
        # Set minimum deployment target
        current_target = build_config.build_settings['IPHONEOS_DEPLOYMENT_TARGET']
        minimum_target = '15.0'
        
        if current_target.nil? || Gem::Version.new(current_target) < Gem::Version.new(minimum_target)
          build_config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = minimum_target
        end
        
        build_config.build_settings['ONLY_ACTIVE_ARCH'] = 'NO' if build_config.name == 'Debug'
      end
    end
  end
end

