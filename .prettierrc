{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "arrowParens": "avoid",
  "singleQuote": true,
  "jsxSingleQuote": true,
  "trailingComma": "all",
  "semi": true,
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ["*.js", "*.js.flow"],
      "options": {
        "parser": "hermes"
      }
    }
  ]
}
